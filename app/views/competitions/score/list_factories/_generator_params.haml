= f.input :next_step, as: :hidden, input_html: { value: :finish }
- if :before_list.in? @list_factory.class.generator_params
  = f.association :before_list, collection: @list_factory.possible_before_lists, selected: @list_factory.default_before_list.try(:id)
- if :before_result.in? @list_factory.class.generator_params
  = f.association :before_result, collection: @list_factory.possible_before_results, selected: @list_factory.default_before_result.try(:id)
- if :best_count.in? @list_factory.class.generator_params
  = f.input :best_count, input_html: { value: @list_factory.default_best_count }
- if :track.in? @list_factory.class.generator_params
  = f.input :track, collection: (1..@list_factory.track_count)
- if :bands.in? @list_factory.class.generator_params
  = f.association :bands, collection: Band.all, as: :check_boxes
- if :single_competitors_first.in? @list_factory.class.generator_params
  = f.input :single_competitors_first, as: :radio_buttons, collection: [['Einzelstarter vor Mannschaftsstarter', true], ['Mannschaftsstarter vor Einzelstarter', false]]

%table.table.table-condensed
  = render 'generator_description', generator_class: @list_factory.class

= f.primary_button :submit, 'Weiter', class: 'mt-3'
