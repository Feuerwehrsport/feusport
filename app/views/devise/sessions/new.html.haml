= render 'devise/header', active: :sign_in

.row
  .col-md-8
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = card do |card|
        = card.title 'Anmelden'
        = card.body do
          = f.error_notification

          .form-inputs
            = f.input :email, autofocus: true, required: false, input_html: { autocomplete: 'email' }
            = f.input :password, required: false, input_html: { autocomplete: 'current-password' }
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        = card.footer do
          = f.button :submit, 'Anmelden', class: 'btn btn-primary'
